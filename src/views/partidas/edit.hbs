<h1>Cambios en la partida {{partida.titulo}} {{partida.id}}</h1>
<div class="container p-4">
    Empieza {{formatearSp partida.fecha_inicio}}
    Acaba {{formatearSp partida.fecha_fin}}
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card">
                <div>
                    <h1> JUGADORES - Nº total: {{jugadores.length}}</h1>
                    {{#if jugadores}}
                    <table class="listado">
                        <tr>
                            <th>Id Jugador</th>
                            <th>Username</th>
                            <th>Nombre</th>
                            <th>Imagen</th>
                            <th>Options</th>
                        </tr>
                        {{#each jugadores}}
                        <tr>
                            <td>{{this.id_jugador}}</td>
                            <td>{{this.usuario}} </td>
                            <td>{{this.full_name}}</td>
                            <td>{{this.imageURL}}</td>
                            <td>
                                <a href="/partidas/{{../partida.id}}/deleteplayer/{{this.id_jugador}}"
                                    class="text-primary"><i class="fa-solid fa-trash"></i>Del</a>
                            </td>
                        </tr>

                        {{/each}}
                    </table>
                    {{else}}
                    <div class="col-md-4-mx-auto">
                        <div class="card card-body text-center">
                            <tr>No hay jugadores guardados <a href="/partidas/{{id}}/add_player"> Crea uno!</a></tr>
                        </div>
                    </div>
                    {{/if}}

                    <div>
                        <a href="/partidas/{{id}}/add_player" class="btn btn-primary"> Añadir jugador</a>

                    </div>
                </div>
            </div>
            <div class="card">

                <div>
                    <h1> OBJETOS - Nº total: {{objetos.length}}</h1>
                    {{#if objetos}}
                    <table class="listado">
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th>Imagen</th>
                            <th>Options</th>
                        </tr>
                        {{#each objetos}}
                        <tr>
                            <td><a href="/objetos/plantilla/{{id}}">{{id}}</a></td>
                            <td>{{this.nombre}}</td>
                            <td>{{this.descripcion}} </td>
                            <td>{{this.imageURL}}</td>
                            <td>
                                <a href="/partidas/{{../partida.id}}/deleteobject/{{this.id}}" class="text-primary"><i
                                        class="fa-solid fa-trash"></i>Del</a>
                            </td>
                        </tr>

                        {{/each}}
                    </table>
                    {{else}}
                    <div class="col-md-4-mx-auto">
                        <div class="card card-body text-center">
                            <tr>No hay objetos guardados <a href="/partidas/{{id}}/add_object"> Crea uno!</a></tr>
                        </div>
                    </div>
                    {{/if}}
                    <div>
                        <a href="/partidas/{{id}}/add_object" class="btn btn-primary"> Añadir objeto</a>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 mx-auto">
            <div class="card">
                {{#if partida.activa}}
                <h2>Partida activa!</h2>
                <a href="/partidas/pause/{{id}}" class="btn btn-warning"> PAUSAR PARTIDA</a>
                {{else}}
                {{#when objetos.length 'gt' jugadores.length }}
                <h2>Partida Pausada</h2>
                <a href="/partidas/start/{{../id}}" class="btn btn-danger"> EMPEZAR PARTIDA</a>
                {{/when}}
                {{/if}}
            </div>
        </div>
    </div>
</div>