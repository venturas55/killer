<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h2>AÑADIR JUGADOR</h2>
                    <form action="/partidas/{{id_partida}}/add_player" method="POST">
                        <select class="custom-select form-select form-select-sm" name="jugador" id="jugador"
                            aria-label=".form-select-sm example">
                            <option value=""> Selecciona</option>
                            {{#each usuarios}}
                            <option value="{{this.id}}" {{#when this.id 'eq' ../ticket.assigned_to_id }} selected
                                {{/when}}>
                                {{this.usuario}} </option>
                            {{/each}}
                        </select>
                        <div class="d-flex justify-content-around m-4">
                        <button class="btn btn-style btn-block">AÑADIR</button>
                        </div>
                    </form>
                 
                </div>
            </div>
        </div>
    </div>
</div>