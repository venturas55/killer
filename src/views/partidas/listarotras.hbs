<div class="fondo">
    <div class="container text-center">
        <h1 class="mb-1">KILLER - PARTIDAS AJENAS</h1>
    </div>

    <div class="hazard-background">
    </div>

    {{#if user}}
    <div class="container text-center">
        {{#if partidas}}
        {{#each partidas}}
        <div class="col-md-5 mx-auto mb-3">
            <a href="/partidas/edit/{{this.id}}">
                <div class="cajita">
                    <h3>{{this.titulo}}</h3>
                    <p>{{this.descripcion}}</p>
                    <p>{{formatearSp this.fecha_inicio}} - {{formatearSp this.fecha_fin}}</p>
                    <p>Partida en creacion.</p>
                    <form action="/partidas/{{this.id}}/add_player" method="post">
                        <input type="hidden" name="jugador" value="{{../user.id}}">
                        <button class="btn btn-warning"> Unirme </button>
                    </form>

                </div>
            </a>
        </div>
        {{/each}}
        {{/if}}
    </div>

    <div class="container text-center mb-4"> <a href="/"> <button class="btn btn-warning">INICIO</button> </a></div>


    {{else}}
    <div class="container text-center mb-5">
        <a href="/signin"> <button class="btn btn-warning">INICIAR SESION</button></a>
    </div>
    <a href="/signup">
        <div class="container text-center"> <button class="btn btn-warning">REGISTRARSE</button>
    </a>

    {{/if}}

    <div class="hazard-background"></div>
</div>