<div class="container p-4 pb-2 mb-5">
  <div class="row">
    <div class="col-md-12">
      {{#if partidas}}
      <table class="listado">
        <tr>
          <th>Id Partida</th>
          <th>Titulo</th>
          <th>Desripcion</th>
          <th>Fecha Inicio</th>
          <th>Fecha Fin</th>
        </tr>
        {{#each partidas}}
        <tr>
          <td>{{titulo}}</td>
          <td>{{descripcion}}</td>
          <td>{{formatearSp fecha_inicio}} </td>
          <td>{{formatearSp fecha_fin}}</td>
          <td>
            <a href="/partidas/edit/{{this.id}}" class="text-primary"><i class="fa-solid fa-pen"></i>Edit</a>
            <a href="/partidas/delete/{{this.id}}" class="text-primary"><i class="fa-solid fa-trash"></i>Del</a>
          </td>
        </tr>

        {{/each}}
      </table>
      {{else}}
      <div class="col-md-4-mx-auto">
        <div class="card card-body text-center">
          <tr>No hay partidas guardados <a href="/partidas/add"> Crea uno!</a></tr>
        </div>
      </div>
    
      {{/if}}
        <h1>TOTAL: {{suma partidas}}</h1>
      <a href="/partidas/add" class="btn btn-primary"> AÃ±adir partida</a>
    </div>
  </div>
</div>