<div class="container p-4 pb-2 mb-5">
  <div class="row">
    <div class="col-md-12">
      {{#if partidas}}
      <table class="listado">
        <tr>
          <th>Titulo</th>
          <th class="d-none d-xl-table-cell">Desripcion</th>
          <th class="d-none d-xl-table-cell">Inicio</th>
          <th class="d-none d-xl-table-cell">Fin</th>
          <th>Acciones</th>
        </tr>
        {{#each partidas}}
        <tr>
          <td>{{titulo}}</td>
          <td class="d-none d-xl-table-cell">{{descripcion}}</td>
          <td class="d-none d-xl-table-cell">{{formatearSp fecha_inicio}} </td>
          <td class="d-none d-xl-table-cell">{{formatearSp fecha_fin}}</td>
          <td>
            <a href="/partidas/edit/{{this.id}}" class="text-warning"><i class="fa-solid fa-pen"></i>Edit</a>
            <a href="/partidas/delete/{{this.id}}" class="text-warning"><i class="fa-solid fa-trash"></i>Del</a>
          </td>
        </tr>

        {{/each}}
      </table>
      {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <tr>No hay partidas guardados <a href="/partidas/add"> Crea uno!</a></tr>
        </div>
      </div>

      {{/if}}
      <div class="col mx-auto">
        <h4 class="m-3">TOTAL: {{suma partidas}}</h4>
        <a href="/partidas/add" class="btn btn-primary"> AÃ±adir partida</a>
             <a class="btn btn-warning m-4" href="javascript:void(0)" onclick="history.back();">Volver</a>
      </div>
    </div>
  </div>
</div>