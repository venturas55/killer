<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h2>INTRODUCIR OBJETO</h2>
                    <form action="/partidas/{{id_partida}}/add_object" method="POST" enctype="multipart/form-data">
                        <div class="form-group"><input class="form-control" type="text" name="nombre"
                                placeholder="Nombre" autofocus /> </div>
                        <div class="form-group"><input class="form-control" type="text" name="descripcion"
                                placeholder="Descripcion" /> </div>
                        <div class="input-group mb-3">
                            <input type="hidden" name="tipo" value="objeto" />
                            <input type="file" name="imagen" class="form-control" id="inputGroupFile02">
                        </div>
                    <button class="btn btn-success btn-block">Guardar</button>
                    </form>
                    <form action="/partidas/edit/{{id_partida}}" method="GET">
                        <button class="btn btn-danger btn-block">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>