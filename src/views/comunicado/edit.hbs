<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h2>EDITAR COMUNICADO</h2>
                    <form action="/comunicados/edit" method="POST">
                    <input type="hidden" name="id" value="{{comunicado.id}}">
                    <input type="hidden" name="id_partida" value="{{comunicado.id_partida}}">
                        <div class="form-group my-3"><input class="form-control" type="text" name="titulo"
                                value="{{comunicado.titulo}}" autofocus /> </div>
                        <div class="form-group my-3"><input class="form-control" type="text" name="descripcion"
                                value="{{comunicado.descripcion}}" /> </div>
                        <div class="d-flex justify-content-around my-4">
                            <button class="btn btn-warning btn-block">Guardar</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
