<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h2>AÑADIR JUGADOR</h2>
                    <form action="/jugadores/add" method="POST">
                        <select class="custom-select form-select form-select-sm" name="jugador"
                            id="jugador" aria-label=".form-select-sm example">
                            <option value=""> Selecciona</option>
                            {{#each usuarios}}
                            <option value="{{this.id}}" {{#when this.id 'eq' ../ticket.assigned_to_id }} selected
                                {{/when}}>
                                {{this.usuario}} </option>
                            {{/each}}
                        </select>
                        <button class="btn btn-success btn-block">AÑADIR</button>
                    </form>
                    <form action="/jugadores/list" method="GET">
                        <button class="btn btn-danger btn-block">Cancelar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>