<div class="container p-4">
    <div class="row4">
        {{#if partidas}}
        <div class="col-md-5 mx-auto mb-3">
            <a type="button" href="/tickets/list/activos/{{user.id}}" class="btn btn-danger">
                Tienes <span class="badge text-bg-secondary">{{partidas.length}}</span> partidas activas
            </a>
        </div>

        <div class="col-md-12 mx-auto">
            <table class="table table-bordered table-danger table-sm" style="white-space: nowrap; overflow-x: auto;">
                <tr>
                    <th class="text-center" colspan="5">Tiene los siguientes asesinatos pendientes </th>
                </tr>
                <tr>
                    <th>Id</th>
                    <th>Partida</th>
                    {{!-- <th>Descripcion</th>
                    <th>Fecha inicio</th>
                    <th>Fecha fin</th> --}}
                    <th>Victima</th>
                    <th>Objeto</th>
                    <th>Accion</th>
                </tr>


                {{!-- //MI OBJETIVO --}}
                {{#each partidas}}
                <tr class="text-center">
                    <td><a href="/partidas/plantillaindividual/{{this.id_partida}}"> {{this.id_partida}} </a></td>
                    <td>{{this.titulo}}</td>
                    {{!-- <td>{{this.descripcion}}</td>
                    <td>{{formatearSp this.fecha_inicio}}</td>
                    <td>{{formatearSp this.fecha_fin}}</td> --}}
                    <td>{{this.id_victima}} - {{this.victima_name}}</td>
                    <td>{{this.objeto}}</td>
                    <td> <button class="btn btn-warning" id="btnkill" id_partida="{{this.id_partida}}"
                            victima="{{this.victima}}" id_victima="{{this.id_victima}}">Asesinar</button> </td>
                </tr>
                {{/each}}
                {{!-- //FIN MI OBJETIVO --}}
            </table>
        </div>
        {{/if}}

        <div class="col-md-5 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <h3>Bienvenid@ <strong> {{user.usuario}} </strong> !!</h3>
                    {{>avatar}}
                    <form action="/profile/upload/{{user.id}}" method="POST" enctype="multipart/form-data">
                        <input type="hidden" name="id" value="{{user.id}}" />
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <input type="file" name="imagen" class="custom-file-input" id="inputGroupFile02">
                                <label class="custom-file-label" for="inputGroupFile02">Choose file</label>
                            </div>
                            <div class="input-group-append">
                                <button type="submit" class="input-group-text">Upload</button>
                            </div>
                        </div>
                    </form>
                    <p>Nombre: {{user.full_name}} </p>
                    <p>Usuario: {{user.usuario}} </p>
                    <p>Correo: {{user.email}} </p>
                    <p>Privilegio: {{user.privilegio}} </p>
                    <a href="/profile/edit" class="btn btn-warning m-4"> Editar el Perfil </a>
                    <a href="/" class="btn btn-primary m-4"> Volver a Inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>